<div id="item-show">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 content">
          <h2 class="title">Item</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>Title</td>
                <td><%= @item.title %></td>
              </tr>
              <tr>
                <td>Code</td>
                <td><%= @item.code %></td>
              </tr>
              <tr>
                <td>Description</td>
                <td><%= @item.description %></td>
              </tr>
              <tr>
                <td>Quantity</td>
                <td><%= @item.quantity %></td>
              </tr>
              <tr>
                <td>Safety Stock</td>
                <td><%= @item.safetystock %></td>
              </tr>
              <tr>
                <td>Reorder Level</td>
                <td><%= @item.reorderlevel %></td>
              </tr>
              <tr>
                <td>Lead Time</td>
                <td><%= @item.leadtime %> days</td>
              </tr>
              <tr>
                <td>Created</td>
                <td><%= @item.created_at.in_time_zone("Chennai").strftime("%d/%m/%Y %I:%M %p") %></td>
              </tr>
              <tr>
                <td>Last Updated</td>
                <td><%= @item.updated_at.in_time_zone("Chennai").strftime("%d/%m/%Y %I:%M %p") %></td>
              </tr>
              <tr>
                <td>Delete</td>
                <td><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-trash"), item_path(@item), :method => :delete, data: {confirm: "Are you sure?"} %></td>
              </tr>
            </tbody>
          </table>
          
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to content_tag(:span, "", class: "glyphicon glyphicon-download-alt") + "Edit", edit_item_path(@item), class: "btn btn-default" %>
          </div>
          <br><br>
          <%= link_to content_tag(:span, "", class: "glyphicon glyphicon-arrow-left") + "Back", root_path %>
      </div>
    </div>
  </div>
</div>
